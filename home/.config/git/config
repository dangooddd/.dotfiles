[credential]
    helper = store

[user]
    email = dangoodds@gmail.com
    name = dangooddd

[credentials]
    username = dangooddd

[alias]
    uncommit = reset HEAD^

[init]
    defaultBranch = main

[diff]
    tool = nvimdiff

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE" "$MERGED" -c "wincmd w" -c "wincmd J"
