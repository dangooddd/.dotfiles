// Zed settings
{
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "terminal": {
    "line_height": "standard"
  },
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Tokyo Night Storm"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "show_edit_predictions": false,
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "basic"
        }
      }
    }
  }
}
