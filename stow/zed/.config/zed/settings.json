// Zed settings
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "show_edit_predictions": false,
  "auto_signature_help": true,
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ty": {
      "settings": {
        "experimental": {
          "rename": true
        }
      }
    },
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        }
      }
    }
  }
}
