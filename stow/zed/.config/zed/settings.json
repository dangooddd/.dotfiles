// Zed settings
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "terminal": {
    "line_height": "standard"
  },
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark Hard"
  },
  "experimental.theme_overrides": {
    "scrollbar.thumb.active_background": "#83a598ac",
    "scrollbar.thumb.hover_background": "#fbf1c74c",
    "scrollbar.thumb.background": "#a899844c"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "show_edit_predictions": false,
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "basic"
        }
      }
    }
  }
}
