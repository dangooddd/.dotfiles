// Zed settings
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "openrouter",
      "model": "minimax/minimax-m2.1",
    },
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "theme": "Gruvbox Dark Hard",
  "vim_mode": true,
  "cursor_blink": false,
  "show_edit_predictions": false,
  "auto_signature_help": true,
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
  },
  "lsp": {
    "ty": {
      "settings": {
        "experimental": {
          "rename": true,
        },
      },
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "typeCheckingMode": "basic",
        },
      },
    },
  },
}
